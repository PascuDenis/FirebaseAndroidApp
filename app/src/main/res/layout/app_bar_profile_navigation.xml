<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.appbar.CollapsingToolbarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/appbar_toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#801A2324"
    android:minHeight="50dp"
    app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
    app:layout_scrollInterpolator="@android:anim/decelerate_interpolator"
    app:layout_scrollFlags="scroll|enterAlways|snap"
    app:contentScrim="?attr/colorPrimary"
    app:expandedTitleMarginStart="48dp"
    app:expandedTitleMarginEnd="64dp">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp">

        <EditText
            android:id="@+id/search_people_textview"
            style="@style/ThemeOverlay.AppCompat.Dark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_gravity="center"
            android:alpha=".60"
            android:backgroundTint="@android:color/white"
            android:drawableStart="@drawable/ic_search_black_24dp"
            android:drawableTint="@android:color/white"
            android:hint="@string/search_people"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:minWidth="3dp"
            android:minHeight="40dp"
            android:textColorHint="#030303" />

        <Spinner
            android:id="@+id/spinnerSort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="center|fill_horizontal"
            android:entries="@array/experiance_sort"
            android:gravity="center|fill"
            android:minWidth="20dp"
            android:minHeight="40dp" />

    </GridLayout>

</com.google.android.material.appbar.CollapsingToolbarLayout>